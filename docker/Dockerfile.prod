# Stage 1: Build
FROM golang:1.24-alpine AS builder

WORKDIR /app
COPY . .

RUN go mod tidy
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o server ./cmd/web

# Stage 2: Run
FROM alpine:latest

WORKDIR /app
COPY --from=builder /app/server .

RUN chmod +x ./server

EXPOSE 8080
ENTRYPOINT ["./server"]
